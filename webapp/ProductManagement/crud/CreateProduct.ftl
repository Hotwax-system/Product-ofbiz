<form method="post" action="<@ofbizUrl>CreateProduct</@ofbizUrl>" name="AddOfbizDemo" class="form-horizontal">

    <div class="control-group">
        <label class="control-label" for="productName">Product Name</label>
        <div class="controls">
            <input type="text" id="productName" name="productName">
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="productCategoryId">Product Category</label>
        <div class="controls">
            <input type="text" id="productCategoryId" name="productCategoryId">
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="productPrice">Product Price</label>
        <div class="controls">
            <input type="text" id="productPrice" name="price">
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn">Create</button>
        </div>
    </div>

</form>
